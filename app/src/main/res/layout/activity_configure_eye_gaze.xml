<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigureEyeGaze">


    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

   <include
       android:id="@+id/toolbar"
       layout="@layout/toolbar" />

    <View
        android:id="@+id/view_warning_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button1"
            android:layout_width="317dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:elevation="4dp"
            android:text="Exercise 1"
            android:textColor="@color/design_default_color_primary"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_weight="3"
            android:background="@drawable/custom_button"
            android:textColor="@color/design_default_color_primary"
            android:text="Exercise 2"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="330dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_weight="3"
            android:background="@drawable/custom_button"
            android:textColor="@color/design_default_color_primary"
            android:text="Exercise 3"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button4"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textColor="@color/design_default_color_primary"
            android:text="Start Calibration"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="590dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button5"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textColor="@color/design_default_color_primary"
            android:text="View Week Chart"
            android:textAllCaps="false"/>

    </LinearLayout>

    <visual.camp.sample.view.PointView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <visual.camp.sample.view.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </visual.camp.sample.view.CalibrationViewer>


</androidx.constraintlayout.widget.ConstraintLayout>